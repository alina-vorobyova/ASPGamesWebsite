    <div class="container">
        <div class="row">
            <div class="col-lg-7 mx-auto">
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="card-title">Create a new account</h5>
                        </div>
                        <div class="card-body p-3">
