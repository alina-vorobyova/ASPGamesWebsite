@model IEnumerable<Post>
@{
    ViewData["Title"] = "Games Blog";
}

    <div class="container">
        @foreach (var item in Model)
        {
            <div class="post mt-5">

                <div class="post-thumbnail">
                    <img class="post-img w-100"
                         src="@item.ImageUrl">
                </div>
                <div class="post-body">
                    <h2 class="post-title">
                        <a href="blog-post.html">
                            @item.Title
                        </a>
                    </h2>
                    <div class="post-meta">
                        <span class="post-meta-item">
                            <i class="ya ya-calendar"></i>
                           @item.Date
                        </span>@*<a class="post-meta-item" href="blog-post.html">
                            <i class="ya ya-comment"></i> 20 comments
                        </a><span class="post-meta-item"><i class="ya ya-clock"></i> 5 min read</span>*@
                    </div>
                    <p>
                       @item.Text
                    </p>
                </div>
            </div><!-- end .post -->
        }
        </div>
